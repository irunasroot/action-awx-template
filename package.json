{
  "name": "action-awx-template",
  "description": "Action for launching an AWX/AAP Job or Workflow Template",
  "version": "v1.0.3",
  "author": "Dennis Whitney",
  "type": "module",
  "private": true,
  "homepage": "https://github.com/irunasroot/action-awx-template",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/irunasroot/action-awx-template.git"
  },
  "bugs": {
    "url": "https://github.com/irunasroot/action-awx-template/issues"
  },
  "keywords": [
    "actions",
    "ansible",
    "awx",
    "aap",
    "redhat"
  ],
  "exports": {
    ".": "./dist/index.js"
  },
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "bundle": "npm run format:write && npm run package",
    "ci-test": "NODE_OPTIONS=--experimental-vm-modules NODE_NO_WARNINGS=1 npx jest",
    "coverage": "npx make-coverage-badge --output-path ./badges/coverage.svg",
    "format:write": "npx prettier --write .",
    "format:check": "npx prettier --check .",
    "local-action": "npx @github/local-action . src/main.ts .env",
    "package": "npx rollup --config rollup.config.ts --configPlugin @rollup/plugin-typescript --bundleConfigAsCjs",
    "package:watch": "npm run package -- --watch",
    "test": "NODE_OPTIONS=--experimental-vm-modules NODE_NO_WARNINGS=1 npx jest",
    "lint:all": "npm run lint; npm run lint:gitleaks; npm run lint:markdown",
    "lint": "npx eslint -c ./.github/linters/eslint.config.mjs",
    "lint:gitleaks": "gitleaks dir . -v",
    "lint:markdown": "markdownlint . -c .github/linters/.markdown-lint.yml",
    "all": "npm run format:write && npm run lint && npm run test && npm run coverage && npm run package"
  },
  "license": "GPL-3.0-only",
  "jest": {
    "preset": "ts-jest",
    "verbose": true,
    "clearMocks": true,
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "js",
      "ts"
    ],
    "testMatch": [
      "**/*.test.ts"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "coverageReporters": [
      "json-summary",
      "text",
      "lcov"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "./src/**"
    ]
  },
  "dependencies": {
    "@actions/core": "^1.11.1",
    "axios": "^1.7.8"
  },
  "devDependencies": {
    "@eslint/compat": "^1.2.7",
    "@github/local-action": "^2.2.1",
    "@jest/globals": "^29.7.0",
    "@rollup/plugin-commonjs": "^28.0.1",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^16.0.0",
    "@rollup/plugin-typescript": "^12.1.1",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.17.24",
    "@typescript-eslint/eslint-plugin": "^8.26.0",
    "@typescript-eslint/parser": "^8.26.0",
    "eslint": "^9.22.0",
    "eslint-config-prettier": "^10.0.2",
    "eslint-import-resolver-typescript": "^4.0.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jest": "^28.11.0",
    "eslint-plugin-prettier": "^5.2.3",
    "jest": "^29.7.0",
    "make-coverage-badge": "^1.2.0",
    "prettier": "^3.5.3",
    "prettier-eslint": "^16.3.0",
    "rollup": "^4.35.0",
    "rollup-plugin-license": "^3.6.0",
    "ts-jest": "^29.2.6",
    "ts-jest-resolver": "^2.0.1",
    "typescript": "^5.8.2"
  }
}
