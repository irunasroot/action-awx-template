{
  "name": "action-awx-template",
  "description": "Action for launching an AWX/AAP Job or Workflow Template",
  "version": "v1.1.0",
  "author": "Dennis Whitney",
  "private": true,
  "homepage": "https://github.com/irunasroot/action-awx-template",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/irunasroot/action-awx-template.git"
  },
  "bugs": {
    "url": "https://github.com/irunasroot/action-awx-template/issues"
  },
  "keywords": [
    "actions",
    "ansible",
    "awx",
    "aap",
    "redhat"
  ],
  "exports": {
    ".": "./dist/index.js"
  },
  "engines": {
    "node": ">=21"
  },
  "scripts": {
    "bundle": "npm run format:write && npm run package",
    "ci-test": "npx jest",
    "coverage": "npx make-coverage-badge --output-path ./badges/coverage.svg",
    "format:write": "npx prettier --write .",
    "format:check": "npx prettier --check .",
    "package": "npx ncc build src/index.ts -o dist --source-map --license licenses.txt",
    "package:watch": "npm run package -- --watch",
    "test": "npx jest",
    "lint:all": "npm run lint; npm run lint:gitleaks; npm run lint:markdown",
    "lint": "npx eslint . -c ./.github/linters/eslint.config.mjs",
    "lint:gitleaks": "gitleaks dir . -v",
    "lint:markdown": "markdownlint . -c .github/linters/.markdown-lint.yml",
    "all": "npm run format:write && npm run lint && npm run test && npm run coverage && npm run package"
  },
  "license": "GPL-3.0-only",
  "jest": {
    "preset": "ts-jest",
    "verbose": true,
    "clearMocks": true,
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "js",
      "ts"
    ],
    "testMatch": [
      "**/*.test.ts"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "coverageReporters": [
      "json-summary",
      "text",
      "lcov"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "./src/**"
    ]
  },
  "dependencies": {
    "@actions/core": "^1.11.1",
    "axios": "^1.13.2"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.36.0",
    "@jest/globals": "^29.7.0",
    "@types/jest": "^29.5.13",
    "@types/node": "^22.7.7",
    "@typescript-eslint/parser": "^8.44.0",
    "@vercel/ncc": "^0.38.4",
    "eslint": "^9.36.0",
    "eslint-plugin-jest": "^28.8.3",
    "eslint-plugin-jsonc": "^2.20.1",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "^16.0.0",
    "jest": "^29.7.0",
    "make-coverage-badge": "^1.2.0",
    "prettier": "^3.6.2",
    "prettier-eslint": "^16.4.2",
    "ts-jest": "^29.4.4",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.44.0"
  }
}
